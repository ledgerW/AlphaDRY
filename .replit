modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Initialize Database"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Token Report Listener"

[[workflows.workflow]]
name = "Initialize Database"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PGPASSWORD=$DATABASE_PASSWORD psql $DATABASE_URL -f db/trigger_functions.sql && python -c 'from database import create_db_and_tables; create_db_and_tables(force_reset=True)'"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[[workflows.workflow]]
name = "Token Report Listener"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python db/listener_service.py"

[deployment]
run = ["sh", "-c", "pip install -r requirements.txt && PGPASSWORD=$DATABASE_PASSWORD psql $DATABASE_URL -f db/deployment_safety.sql && python -c 'from database import create_db_and_tables; create_db_and_tables()' && (python db/listener_service.py & uvicorn main:app --host 0.0.0.0 --port 80)"]
build = ["sh", "-c", "pip install -r requirements.txt"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 2024
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 80
externalPort = 80
